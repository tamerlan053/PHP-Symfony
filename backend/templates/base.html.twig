<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Computer Stock Manager{% endblock %}</title>

    <!-- Bootstrap via CDN -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ asset('css/app.css') }}" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    {% block stylesheets %}{% endblock %}

</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-primary px-3 d-flex align-items-center justify-content-between sticky-top">

    <a class="navbar-brand text-white fw-bold" href="{{ path('app_home') }}">
        Tamerlan & Claudio's computershop
    </a>

    <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapse menu -->
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav align-items-center text-center">
            <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('item_index') }}">Overzicht artikelen</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('item_add') }}">Artikel toevoegen</a>
            </li>

            <li class="nav-item d-lg-none mt-2">
                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-light btn-sm w-100 text-center">
                        <strong>Uitloggen</strong>
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-sm w-100 text-center mb-2">
                        <strong>Login</strong>
                    </a>
                    <a href="{{ path('app_register') }}" class="btn btn-outline-light btn-sm w-100 text-center">
                        <strong>Registreren</strong>
                    </a>
                {% endif %}
            </li>
        </ul>
    </div>

    <div class="d-none d-lg-flex ms-3 flex-shrink-0">
        {% if app.user %}
            <a href="{{ path('app_logout') }}" class="btn btn-outline-light btn-sm me-2">
                <strong>Uitloggen</strong>
            </a>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-sm me-2">
                <strong>Login</strong>
            </a>
            <a href="{{ path('app_register') }}" class="btn btn-outline-light btn-sm">
                <strong>Registreren</strong>
            </a>
        {% endif %}
    </div>

</nav>




<div class="container mt-4">
    {% block body %}{% endblock %}
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
